{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "rootDir": ".",
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@config/*": ["config/*"],
      "@database/*": ["database/*"]
    },
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src", "config", "database", "tests"],
  "exclude": ["node_modules"]
}
